{
  "name": "arbooks",
  "private": true,
  "version": "0.0.0",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite --open=false",
    "build": "vite build && npm run build:ts:electron && npm run build:electron",
    "build:frontend": "vite build",
    "build:electron": "electron-builder",
    "build:ts:electron": "tsc --project electron/tsconfig.electron.json",
    "start:electron": "npm run build:ts:electron && concurrently -n VITE,ELECTRON -c green,magenta --kill-others-on-fail --success first \"npm run dev\" \"npm run start:electron:delayed\"",
    "start:electron:delayed": "wait-on http://localhost:5173 && electron dist-electron/main.js",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "build": {
    "appId": "com.sigma.arbooks",
    "files": [
      "dist-electron/**/*",
      "electron/**/*",
      "sdxs-512-dreamshaper/**/*",
      "bin/**/*",
      "resources/**/*"
    ],
    "asarUnpack": [
      "bin",
      "sdxs-512-dreamshaper",
      "resources"
    ],
    "mac": {
      "identity": null,
      "target": [
        "dir"
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "arBooks-${version}-${arch}.${ext}"
    },
    "generateUpdatesFilesForAllChannels": false,
    "directories": {
      "output": "dist-final"
    }
  },
  "dependencies": {
    "@types/app-root-dir": "^0.1.4",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "app-root-dir": "^1.0.2",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.7",
    "electron-squirrel-startup": "^1.0.1",
    "howler": "^2.2.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-use-audio-player": "^4.0.2",
    "vite": "^6.0.3",
    "vite-plugin-electron": "^0.29.0",
    "wait-on": "^8.0.2"
  },
  "devDependencies": {
    "@azure/msal-browser": "^3.28.0",
    "@azure/msal-node": "^2.16.2",
    "@electron-forge/cli": "^7.6.1",
    "@electron-forge/maker-deb": "^7.6.1",
    "@electron-forge/maker-rpm": "^7.6.1",
    "@electron-forge/maker-squirrel": "^7.6.1",
    "@electron-forge/maker-zip": "^7.6.1",
    "@electron-forge/plugin-auto-unpack-natives": "^7.6.1",
    "@electron-forge/plugin-fuses": "^7.6.1",
    "@electron/fuses": "^1.8.0",
    "@eslint/js": "^9.17.0",
    "@tailwindcss/typography": "^0.5.15",
    "@types/async-retry": "^1.4.9",
    "@types/express": "^5.0.0",
    "@types/howler": "^2.2.12",
    "@types/node": "^22.10.10",
    "@types/react": "^18.3.17",
    "@types/react-dom": "^18.3.5",
    "@xenova/transformers": "^2.17.2",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.2.0",
    "daisyui": "^4.12.22",
    "electron": "^33.3.2",
    "electron-builder": "^25.1.8",
    "electron-debug": "^4.1.0",
    "eslint": "^9.17.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "express": "^4.21.2",
    "globals": "^15.13.0",
    "node-llama-cpp": "^3.4.1",
    "postcss": "^8.4.49",
    "react-icons": "^5.4.0",
    "react-pageflip": "^2.0.3",
    "react-router-dom": "^7.1.1",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.18.1",
    "vite-plugin-electron-renderer": "^0.14.6",
    "zustand": "^5.0.2"
  }
}
